<h1>Minions of division: <%= @division.name() %></h1>

<form action="/divisions/<%= @division.id %>" method="post">
  <div class="form-group">
    <input type ="hidden" name="_method" value="patch">
    <input id="name" name="name" type="test" value="<%= @division.name %>" class="form-control">
  </div>
  <button type="submit" class="btn btn-default">Update This Division's Name</button>
</form>

<br>

<form action="/divisions/<%= @division.id %>" method="post">
  <div class="form-group">
    <input type ="hidden" name="_method" value="delete">
    <button type="submit" class="btn btn-danger">DELETE THIS DIVISION</button>
  </div>
</form>

<br>

